<h1><%= @place["name"] %></h1>

<h2>Posts</h2>

   <%= @posts.inspect %>

<ul>
  <% for post in @posts %>
    <li><%= post["title"] %>, <%= post["posted_on"] %>, <%= post["description"] %></li>
  <% end %>
</ul>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p><a href="/places">Back to Places</a></p>

<p><%= button_to "Delete this place", @place, :method => "delete" %></p>
  
